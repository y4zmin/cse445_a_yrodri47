<?xml version="1.0" encoding="UTF-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<xsd:element name="Hotels">
    <xsd:complexType>
        <xsd:sequence>
            <xsd:element name="Hotel">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="Name" type="xs:string"/>
                        <xsd:element name="Phone" type="xs:string" maxOccurs="unbounded"/>
                        <xsd:element name="Address">
                            <xsd:complexType>
                                <xs:sequence>
                                    <xsd:element name="Number" type="xs:integer"/>
                                    <xsd:element name="Street" type="xs:string"/>
                                    <xsd:element name="City" type="xs:string"/>
                                    <xsd:element name="State" type="xs:string"/>
                                    <xsd:element name="Zip" type="xs:string"/>
                                </xsd:sequence>
                                <xsd:attribute name="NearestAirport" type="xs:string" use="required"/>
                            </xsd:complexType>
                        </xsd:element>
                    </xsd:sequence>
                     <xsd:attribute name="Rating" type="xs:double" use="optional"/>
                </xsd:complexType>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
</xsd:element>

</xsd:schema>
